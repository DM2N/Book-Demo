@model IEnumerable<Web.Models.Orders>

@{
    ViewBag.Title = "Details";
}

<h2>订单详情</h2>
<table>
    <tr>
        <th>
            送货地址
        </th>
        <th>
            书籍编号
        </th>
        <th>
            购买数量
        </th>
        <th></th>
    </tr>
@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BookId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Num)
        </td>
    </tr>
}
</table>

